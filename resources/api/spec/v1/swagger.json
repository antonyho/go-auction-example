{
    "openapi": "3.0.3",
    "info": {
        "title": "Auction Bid Tracker",
        "description": "This is an example server for auction bid tracker.",
        "contact": {
            "name": "Antony Ho",
            "url": "https://antonyho.net/",
            "email": "antony.h@riseup.net"
        },
        "license": {
            "name": "MIT"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:{port}/{basePath}",
            "description": "developer server",
            "variables": {
                "port": {
                    "enum": ["8080"],
                    "default": "8080"
                },
                "basePath": {
                    "default": "v1"
                }
            }
        }
    ],
    "components": {
        "schemas": {
            "Item": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "Bidding": {
                "type": "object",
                "required": ["bidder", "price"],
                "properties": {
                    "bidder": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "format": "float"
                    }
                }
            },
            "Activity": {
                "type": "object",
                "properties": {
                    "item": {
                        "$ref": "#/components/schemas/Item"
                    },
                    "bid": {
                        "$ref": "#/components/schemas/Bidding"
                    }
                }
            }
        }
    },
    "paths": {
        "/item": {
            "post": {
                "description": "add new item",
                "operationId": "addItem",
                "requestBody": {
                    "description": "add item to an auction",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Item"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "new item added"
                    }
                }
            }
        },
        "/item/{item_name}/close": {
            "put": {
                "description": "close auction for an item",
                "operationId": "closeItem",
                "responses": {
                    "202": {
                        "description": "item auction closed"
                    }
                }
            },
            "parameters": [
                {
                    "name": "item_name",
                    "in": "path",
                    "description": "Name of auction item",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        },
        "/items": {
            "get": {
                "description": "list all items",
                "operationId": "listAllItems",
                "responses": {
                    "200": {
                        "description": "list all items in auction",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Item"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/bid/{item_name}": {
            "get": {
                "description": "list all bids on an item",
                "operationId": "listAllBidsByItemId",
                "responses": {
                    "200": {
                        "description": "list all bids of the item",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Bidding"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "item not found"
                    }
                }
            },
            "post": {
                "description": "place a bid on an item",
                "operationId": "bidItemById",
                "requestBody": {
                    "description": "item to bid in an auction",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Bidding"
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "201": {
                        "description": "bid placed"
                    },
                    "400": {
                        "description": "bid rejected"
                    },
                    "404": {
                        "description": "item not found"
                    }
                }
            },
            "parameters": [
                {
                    "name": "item_name",
                    "in": "path",
                    "description": "Name of auction item",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        },
        "/bid/{item_name}/winning": {
            "get": {
                "description": "get the winning bid on an item",
                "operationId": "getWinningBidByItemId",
                "responses": {
                    "200": {
                        "description": "winning bid of the item",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Bidding"
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "no bidder"
                    },
                    "404": {
                        "description": "item not found"
                    }
                }
            },
            "parameters": [
                {
                    "name": "item_name",
                    "in": "path",
                    "description": "name of auction item",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        },
        "/user/{id}": {
            "get": {
                "description": "list all bids by a user",
                "operationId": "listAllBidsByUserId",
                "responses": {
                    "200": {
                        "description": "all bids by a user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Activity"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "user not found"
                    }
                }
            },
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "description": "user ID",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                }
            ]
        }
    }
}